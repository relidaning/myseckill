<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.lidaning.myseckill.user.mapper.UserMapper">

    <resultMap type="xyz.lidaning.myseckill.user.domain.User" id="UserResult">

        <result property="id"    column="id"    />
        <result property="username"    column="username"    />
        <result property="password"    column="password"    />

    </resultMap>

    <sql id="selectUserVo">
        select `id` as id, `username` as username, `password` as password  from `user`
    </sql>

    <select id="selectUserById" parameterType="String" resultMap="UserResult">
        <include refid="selectUserVo"></include>
        where `id` = #{id}
    </select>

    <select id="selectUserList" parameterType="xyz.lidaning.myseckill.user.domain.User" resultMap="UserResult">
        <include refid="selectUserVo"/>
        <where>

            <if test="id != null and id != ''"> and `id` = #{id}</if>
            <if test="username != null and username != ''"> and `username` = #{username}</if>
            <if test="password != null and password != ''"> and `password` = #{password}</if>

        </where>
    </select>

    <insert id="insertUser" parameterType="xyz.lidaning.myseckill.user.domain.User">
        insert into `user`
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="id != null and id != ''">`id`,</if>
            <if test="username != null and username != ''">`username`,</if>
            <if test="password != null and password != ''">`password`,</if>

         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">

            <if test="id != null and id != ''">#{id},</if>
            <if test="username != null and username != ''">#{username},</if>
            <if test="password != null and password != ''">#{password},</if>

         </trim>
    </insert>

    <update id="updateUser" parameterType="xyz.lidaning.myseckill.user.domain.User">
        update `user`
        <trim prefix="SET" suffixOverrides=",">

            <if test="id != null and id != ''">`id` = #{id},</if>
            <if test="username != null and username != ''">`username` = #{username},</if>
            <if test="password != null and password != ''">`password` = #{password},</if>

        </trim>
        where `id` = #{id}
    </update>

    <delete id="deleteUserById" parameterType="String">
        delete from `user` where `id` = #{id}
    </delete>

    <delete id="deleteUserByIds" parameterType="String">
        delete from `user` where `id` in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
